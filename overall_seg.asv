function overall_seg(lc,ini_cluster,ccol,edgebox_hx,g)

  %统计边缘响应
  figure(6);
  plot(ccol);
  line_len=max(ccol);
  hold on
  for i=1:length(ini_cluster)
      stem(ini_cluster(1,i),line_len,'g');
  end 
  for i=1:length(lc)
      stem(lc(1,i),line_len,'r');
  end  
  hold off    
  
  %边缘响应
  figure(7);
  imshow(edgebox_hx);
  
end